<div class="container">
  <div class="row w-50 mx-auto mt-5">
    <%= simple_form_for @flat do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
